{
  "name": "swagger-mcp-tool",
  "version": "0.0.2",
  "description": "Swagger MCP 工具，为 AI 提供 Swagger 文档查询能力，辅助生成接口代码。",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "swagger-mcp-tool": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "bun build src/index.ts --outdir dist --target node --minify",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "release": "npm publish"
  },
  "keywords": [
    "mcp",
    "swagger",
    "ai",
    "tools"
  ],
  "author": "lbpapp@163.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sdlbp/swagger-mcp-tool.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "swagger-parser": "^10.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^20.10.0",
    "openapi-types": "^12.1.3",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
